<?xml version="1.0" encoding="utf-8"?>
<!-- Card View for single item in View Jobs Normal Recycler view -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15sp"
    app:cardUseCompatPadding="true">

    <!-- Linear Layout with Vertical Orientation-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Space with height 10sp -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="10sp" />

        <!-- Text View for job id -->
        <TextView
            android:id="@+id/jobIdNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:text="TextView" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10sp" />

        <!-- Linear Layout with horizontal orientation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Text View for job name label -->
        <TextView
            android:id="@+id/jobNameLabelNormal"
            android:paddingLeft="10sp"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:text="Job Name" />

        <Space
            android:layout_width="30sp"
            android:layout_height="match_parent" />

        <!-- Text View for job name with id: jobNameNormal -->
        <TextView
            android:id="@+id/jobNameNormal"
            android:layout_width="260sp"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:text="TextView" />


    </LinearLayout>



        <!-- Linear Layout with horizontal orientation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- Text View for job location label -->
