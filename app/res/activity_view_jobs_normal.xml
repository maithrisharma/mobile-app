<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for View Jobs Normal user -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ViewJobsNormal"
    android:background="@drawable/cut_card_background"
    android:orientation="vertical">
    <!-- Space with height 10sp -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="10sp" />

    <!-- Linear layout with horizontal orientation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <!-- Edit Text for search with id: search -->
    <EditText
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:id="@+id/search"
        android:layout_margin="10sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:src="@drawable/ic_baseline_search_24"/>

    </LinearLayout>



    <!-- Recycler view for view Jobs Normal with id: recyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView"/>


</LinearLayout>