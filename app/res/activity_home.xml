<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for Home Activity -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cut_card_background"
    tools:context=".Home">

    <!-- Text view for Home displaying Dashboard -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_margin="12sp" />
    
    <!-- Grid Layout -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20sp"
        android:columnCount="2"
        android:rowCount="2">
        
        <!-- Card View for Add Job -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAddJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            app:cardCornerRadius="8sp"
            app:cardElevation="8sp"
            app:cardUseCompatPadding="true">
            
            <!-- Linear Layout with Vertical Orientation-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Icon for Add Job -->
                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="80sp"
                    android:src="@drawable/ic_baseline_add_circle_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Job"
                    android:textSize="26sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card View for View Jobs -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewJobs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_column="1"
            app:cardCornerRadius="8sp"
            app:cardElevation="8sp"
            app:cardUseCompatPadding="true">

            <!-- Linear Layout with Vertical Orientation-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Icon for View Jobs -->
                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="80sp"
                    android:src="@drawable/ic_baseline_visibility_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Jobs"
                    android:textSize="26sp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card view for Profile -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="1"
            android:layout_column="0"
            app:cardCornerRadius="8sp"
            app:cardElevation="8sp"
            app:cardUseCompatPadding="true">

            <!-- Linear Layout with Vertical Orientation-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Icon for Profile -->
                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="80sp"
                    android:src="@drawable/ic_baseline_person_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="26sp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <!-- Card View for Logout -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="1"
            android:layout_column="1"
            app:cardCornerRadius="8sp"
            app:cardElevation="8sp"
            app:cardUseCompatPadding="true">

            <!-- Linear Layout with Vertical Orientation-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Icon for Logout -->
                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="80sp"
                    android:src="@drawable/ic_baseline_exit_to_app_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textSize="26sp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </GridLayout>



</RelativeLayout>